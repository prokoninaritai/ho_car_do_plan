<div class="page-container">
  <div class="top-banner"></div>

  <h1>新規登録</h1>
  
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :nickname, 'ニックネーム' %><br>
        <%= f.text_field :nickname, autofocus: true, class: "form-input" %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %><br>
        <%= f.email_field :email, class: "form-input" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, 'ログインパスワード' %><br>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "登録する", class: "submit-button" %>
      </div>
    <% end %>
  </div>

  <div class="bottom-banner"></div>
</div>