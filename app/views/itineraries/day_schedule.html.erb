<div class="schedule-container">
  <h2 class="header">〇月〇日の日程（1日目）</h2>

<!-- 出発地ブロック -->
<div class="destination-block time-block departure-block">
  <div class="left-container">
    <div class="left-section">
      <label>出発地:</label>
      <input type="text" value="自宅" readonly>
    </div>
    <div class="left-section">
      <label>出発時間:</label>
      <input type="time">
    </div>
  </div>
</div>

<!-- 移動時間ブロック -->
<div class="destination-block time-block travel-time-block">
  <div class="left-container">
    <div class="left-section">
      <label>移動時間:</label>
      <input type="text" placeholder="例: 0:30">
    </div>
  </div>
</div>

<!-- 目的地ブロック -->
<div class="destination-block destination-details-block">
  <div class="left-container">
    <div class="left-section">
      <label>到着予定時間:</label>
      <input type="text" placeholder="例: 0:30">
    </div>
    <div class="left-section">
      <label>滞在予定時間:</label>
      <input type="text" placeholder="例: 1:00">
    </div>
    <div class="left-section">
      <label>出発予定時間:</label>
      <input type="time">
    </div>
  </div>

  <div class="right-section">
    <h3>目的地①: なないろ・ななえ</h3>
    <p>休館日: なし</p>
    <p>営業時間: 9:00 - 18:00</p>
    <p>スタンプ押印時間: 9:00 - 18:00</p>
  </div>
</div>

  <!-- ページネーション -->
  <div class="pagination">
    <button>1</button>
    <button>2</button>
    <button>3</button>
  </div>
</div>
