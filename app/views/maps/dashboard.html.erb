  <%= javascript_importmap_tags %>
  
  <!-- ヘッダー -->
  <header class="header">
    <div class="welcome">ようこそ <%= current_user.nickname %> さん</div>
    <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: 'logout-button' %>
  </header>

<main>
<div class="main-contents">
  <!-- インストラクション -->
  <div class="instructions">
    ピンを押して詳細を確認しましょう。<br>
    スタンプ押印済みを登録しましょう。
  </div>

  <!-- 地図の表示領域 -->
    <div id="map1"></div>
    <!-- Google Maps API -->
    <script 
      src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap" 
      async
      defer>
    </script>

    <!-- 道の駅詳細モーダル -->
    <div id="station-modal" class="custom-modal">
      <div class="custom-modal-content">
        <span id="close-modal" class="close-button">&times;</span>
        <h2>道の駅: <span id="stationName">○○</span></h2>
        <p><strong>休館日:</strong> <span id="closedDays"></span></p>
        <p><strong>開館時間:</strong></p>
        <ul id="businessHours"></ul>
        <p><strong>スタンプ押印時間:</strong></p>
        <p id="stampHours">開館時間に同じ ※休館日は押せません</p>
      </div>
    </div>


    <!--　日程を作成するモーダル　---->
    <div id="itinerary-modal" class="custom-modal">
      <div class="custom-modal-content">
        <span id="close-itinerary-modal" class="close-button">&times;</span>
        <h2>日程を作成</h2>
        <%= render partial: "itineraries/new", locals: { itinerary: @itinerary } %>
      </div>
    </div>
  </div>


  <!-- フッター -->
  <footer class="footer">
  <div class="footer-container">
    <!-- モーダルを開くボタン -->
    <button id="open-itinerary-modal" class="footer-link">日程を<br>作成する</button>
    <button href="#" class="footer-link">日程を<br>確認する</button>
    <button href="#" class="footer-link">マイページ</button>
  </div>
  </footer>

 </body>
</html>